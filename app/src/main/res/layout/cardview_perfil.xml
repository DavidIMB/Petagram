<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    cardview:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@drawable/borde"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/fotohusky"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/borde">

            <TextView
                android:id="@+id/tvCalificacionPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/calificacion"
                android:textSize="25dp"
                android:layout_marginLeft="30dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imgHuesoAmarilloPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/icons8_dog_bone_48" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>